@model IEnumerable<FipeMobile.Models.Modelo>

@{
    ViewBag.Title = "Fipe Mobile";
}

@section Header {
    @Html.ActionLink("Voltar", null, null, new { data_icon = "arrow-l", data_rel = "back", data_direction = "reverse" })
    <h1>@ViewBag.Title</h1>
    @Html.ActionLink("Home", "Index", "Marca", null, new { data_icon = "home", data_transition = "flip" })
}

<h6>@ViewBag.Path</h6>
<h6>@ViewBag.PathSequence</h6>


@if (Model.Count() > 0)
{
    <div data-role="content">
        <ul data-role="listview">
            @foreach (var item in Model.ToList().OrderBy(x => x.name))
            {
                <li>@Html.ActionLink(item.name, "Index", "ModeloAno", new { modeloName = item.name, modeloId = item.id }, null)</li>
            }
        </ul>
    </div>
}
else
{
    <p>Nenhum resultado encontrado para essa busca.</p>
    <p>Tente novamente mais tarde.</p>
}
